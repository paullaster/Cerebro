# Database
DATABASE_URL="postgresql://user:password@localhost:5432/agricollect"
DATABASE_READ_REPLICA_URL="postgresql://user:password@localhost:5433/agricollect"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Server
NODE_ENV="development"
PORT="3000"
CLUSTER_ENABLED="true"
WORKERS_COUNT="auto"

# Security
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_EXPIRATION="7d"
REFRESH_TOKEN_EXPIRATION="30d"
ENCRYPTION_KEY="32-char-encryption-key-for-sensitive-data"

# Rate Limiting
THROTTLE_TTL="60"
THROTTLE_LIMIT="100"

# External Services
MPESA_CONSUMER_KEY=""
MPESA_CONSUMER_SECRET=""
MPESA_SHORTCODE=""
MPESA_PASSKEY=""

SMTP_HOST="localhost"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""

MARKET_RATES_API_URL="https://api.marketdata.example.com"
MARKET_RATES_API_KEY=""

# Application
SUPER_ADMIN_EMAIL="superadmin@agricollect.com"
SUPER_ADMIN_PASSWORD="ChangeMe123!"
LOAN_RECOVERY_CAP="0.6"
DEFAULT_COMMISSION_RULE_ID=""

# Frontend URLs
FRONTEND_URLS="http://localhost:3000,http://localhost:3001"

# Logging Configuration
LOG_LEVEL="info"
LOG_FORMAT="json" # json, console, loki
LOKI_ENABLED="false"
LOKI_HOST="http://localhost:3100"
LOG_RETENTION_DAYS="30"

# Distributed Tracing
TRACING_ENABLED="false"
JAEGER_ENDPOINT="http://localhost:14268/api/traces"

# Performance Monitoring
PERFORMANCE_THRESHOLD_MS="1000"
SLOW_QUERY_THRESHOLD_MS="100"

# Alerting
ALERT_WEBHOOK_URL=""
SLACK_WEBHOOK_URL=""