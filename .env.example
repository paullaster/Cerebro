# Runtime
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/agricollect?schema=public"

# Redis (Caching & Socket.io Adapter)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
JWT_SECRET=super-secret-key-change-me
SESSION_SECRET=session-secret-key

# Cluster
CLUSTER_ENABLED=true
WORKERS_COUNT=auto

# Super Admin Seeding
SUPER_ADMIN_EMAIL=admin@agricollect.com
SUPER_ADMIN_PASSWORD=change-me-immediately

# 3rd Party Services
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_SHORTCODE=

STRIPE_API_KEY=

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Frontend URLs (CORS)
FRONTEND_URLS=http://localhost:3000,http://localhost:4000

# Business Rules
LOAN_RECOVERY_CAP=0.60
