{
  "name": "agricollect-backend",
  "version": "1.0.0",
  "description": "High-throughput agricultural collection service",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "start": "node --env-file=.env src/main.ts",
    "start:dev": "node --env-file=.env --watch src/main.ts",
    "start:prod": "NODE_ENV=production node --env-file=.env.production dist/main.js",
    "build": "tsc && tsc-alias",
    "test": "NODE_OPTIONS='--experimental-test-coverage' node --test",
    "test:watch": "NODE_OPTIONS='--experimental-test-coverage' node --test --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/bullmq": "^10.0.0",
    "@nestjs/throttler": "^10.0.0",
    "@nestjs/cache-manager": "^10.0.0",
    "@prisma/client": "^7.0.0",
    "bullmq": "^5.0.0",
    "cache-manager": "^5.0.0",
    "cache-manager-redis-store": "^3.0.0",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.14.0",
    "compression": "^1.7.0",
    "crypto": "^1.0.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.0.0",
    "node-cron": "^3.0.0",
    "puppeteer": "^21.0.0",
    "sanitize-html": "^2.0.0",
    "socket.io": "^4.0.0",
    "socket.io-redis-adapter": "^8.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/sanitize-html": "^2.0.0",
    "@types/uuid": "^9.0.0",
    "prisma": "^7.0.0",
    "tsc-alias": "^1.0.0",
    "typescript": "^5.0.0"
  }
}