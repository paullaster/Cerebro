{
  "name": "agricollect-backend",
  "version": "1.0.0",
  "description": "High-throughput agricultural collection service",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "start": "node --env-file=.env src/main.ts",
    "start:dev": "node --env-file=.env --watch src/main.ts",
    "start:prod": "NODE_ENV=production node --env-file=.env.production dist/main.js",
    "build": "tsc && tsc-alias",
    "test": "NODE_OPTIONS='--experimental-test-coverage' node --test",
    "test:watch": "NODE_OPTIONS='--experimental-test-coverage' node --test --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/cache-manager": "^3.1.0",
    "@nestjs/common": "^11.1.12",
    "@nestjs/core": "^11.1.12",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/platform-socket.io": "^11.1.12",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/client": "^7.2.0",
    "@sentry/node": "^10.34.0",
    "@sentry/profiling-node": "^10.34.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.66.5",
    "cache-manager": "^7.2.8",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "express-rate-limit": "^8.2.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prom-client": "^15.1.3",
    "puppeteer": "^24.35.0",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "winston-loki": "^6.1.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@nestjs/testing": "^11.1.12",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.9",
    "@types/passport-jwt": "^4.0.1",
    "@types/sanitize-html": "^2.16.0",
    "prisma": "^7.2.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  }
}
